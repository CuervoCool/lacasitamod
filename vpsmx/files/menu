 tpu(){ for(( x=1;x<$1;x++ )); do tput cuu1 && tput dl1 ; done ; }
	while :; do
		read -p $'\e[1;30m ‚îî‚ä≥ Seleccione su opci√≥n: ' opx
		if [[ -z $opx ]]; then
			msg -f "Para volver al men√∫ anterior, presione x";sleep 2
			tpu '3'
		elif [[ ${opx} != +([0-9]) ]]; then
			msg -f "Ingrese s√≥lo n√∫meros como respuesta";sleep 2
			tpu '3'
		elif [[ $opx == @("x"|"X") ]]; then
			msg -f "Regresando al men√∫ anterior..";sleep 2
			tpu '3'
			menu
		else
kakzh='{
"selection_user": {
        "v1": "badvpn",
        "v2": "shadowsocks",
        "v3": "sockspy",
        "v4": "v2ray",
        "v5": "ssl",
        "v6": "dropbear",
        "v7": "squid",
        "v8": "openvpn",
        "v9": "slowdns",
        "v10": "monitorapp",
        "v11": "bot",
        "v12": "wireguard",
        "v13": "notibot",
        "v14": "checkuser",
        "v15": "apache",
        "v16": "firewall",
        "v17": "fail2ban",
        "v18": "detallesvps",
        "v19": "tcp",
        "v20": "dnsnetflix",
        "v21": "automantenimiento",
        "v22": "subdominios",
        "v23": "speedtest",
        "v24": "fix",
        "v25": "herramientas",
        "v26": "botdrowkid",
        "v27": "udps",
        "v28": "wspro"
        }
}'
			[[ $opx != @("4"|"26"|"27"|"28") ]] && {
				xd=$(echo $kakzh|jq -r .selection_user.v$opx)
				#fun_tit --$xd
				source ${sfile[inst]} --$xd
			} || {
				jjska=$(jq '{v4: "v2ray", v26: "bot", v27: "udp", v28: "websokat" }' -n|jq -r .v$opx)
				fun_${jjska}
			}
		break
		fi
	done
}

NOTIFY () {
clear
clear
fun_tit

msg -ama " Notify-BOT (Notificacion Remota)|@LaCasitaMx_Noty_Bot "
msg -bar
echo -e "\033[1;94m Notify-BOT es un simple notificador de:"
echo -e "\033[1;94m >> Usuario Expirado"
echo -e "\033[1;94m >> Usuario Eliminado"
echo -e "\033[1;94m >> Avisos de VPS Reiniciada"
echo -e "\033[1;94m >> Avisos de Monitor de Protocolos"
echo -e "\033[1;97m Inicie El BOT de Telegram"
echo -e "\033[1;92m ¬°¬° Para sacar su ID entre al BOT @conectedmx_bot"
echo -e "\033[1;92m Aparesera algo parecido üë§ ‚Üí Tu ID es: 45145564   "
msg -bar
echo -e "\033[1;93mIgrese un nombre para la VPS:\033[0;37m"; read -p " " nombr
echo "${nombr}" > ${sdir[0]}/controlador/nombre.log
echo -e "\033[1;93mIgrese su ID üë§:\033[0;37m"; read -p " " idbot
echo "${idbot}" > ${sdir[0]}/controlador/IDT.log 
msg -bar
echo -e "\033[1;32m              ID AGREGADO CON EXITO"
msg -bar
wget -qO- ifconfig.me > ${sdir[0]}/IP.log
ipt=`less ${sdir[0]}/IP.log` > /dev/null 2>&1
Nip="$(echo $ipt)"
NOM="$(less ${sdir[0]}/controlador/nombre.log)"
NOM1="$(echo $NOM)"
IDB1=`less ${sdir[0]}/controlador/IDT.log` > /dev/null 2>&1
IDB2=`echo $IDB1` > /dev/null 2>&1
KEY="2012880601:AAEJ3Kk18PGDzW57LpTMnVMn_pQYQKW3V9w"
URL="https://api.telegram.org/bot$KEY/sendMessage"
MSG="‚ö†Ô∏è ‚ñ∫‚ñ∫ AVISO DE VPS: $NOM1 ‚ö†
üëâ ‚ñ∫‚ñ∫ IP: $Nip
üëâ ‚ñ∫‚ñ∫ Usuario: $(cat ${sdir[0]}/message.txt)
üëâ ‚ñ∫‚ñ∫ MENSAJE DE PRUEBA
üî∞ ‚ñ∫‚ñ∫ NOTI-BOT ACTIVADO CORRECTAMENTE"
curl -s --max-time 10 -d "chat_id=$IDB2&disable_web_page_preview=1&text=$MSG" $URL &>/dev/null
echo -e "\033[1;34m            SE ENVIO MENSAJE DE PRUEBA "
touch $prefix/noty
}

noti(){
clear
fun_tit
echo -e "	\e[97m\e[1;100mACTIVADOR NOTI-BOT\e[0m"
msg -bar
echo -e "\e[1;93m[\e[92m1\e[93m]$(msg -verm2 "‚ûõ ")$(msg -azu "ACTIVAR NOTI-BOT $nt")  \e[1;93m[\e[92m2\e[93m]$(msg -verm2 "‚ûõ ")$(msg -azu "DESACTIVAR NOTI-BOT")"
msg -bar
echo -e "	     	\e[1;93m[\e[92m0\e[93m]$(msg -verm2 "‚ûõ ")$(msg -azu "VOLVER")"
msg -bar
echo -ne " ‚ñ∫\e[1;37m Selecione Una Opcion: \e[33m " && read selectos
case $selectos in
0)menu3 ;;
1) NOTIFY && msg -ne "Enter Para Continuar" && read enter
menu3 ;;
2)
echo " "> ${sdir[0]}/controlador/IDT.log &>/dev/null
rm $prefix/noty &>/dev/null
msg -verm2 "	NOTI-BOT DESACTIVADO"
;;
esac
}

