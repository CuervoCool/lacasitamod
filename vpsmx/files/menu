 fun_bot(){
	fun_tit --bot-vps
	msg -ama "		BOT CONTROL-VPS"
	msg -bar
	msg -ama "$(fun_trans "\e[1;93mDescripci√≥n:")"
	echo -e "\n\e[1;97mEste es un bot v√≠a telegram con el cual puedes manejar\ntu vps usando comandos como:\n\e[1;32mcd, wget, rm, (puedes usar este script), figlet\n\e[1;97metc..\n$(msg -bar)"
	menu_func "INSTALAR BOT CONTROL-VPS" "M√ÅS INFORMACI√ìN"
	volver
	case `selection_fun 2` in
	 1)
		fun_bar "git clone https://github.com/drowkid01/shell-bot.git ${sdir[0]}/control-bot"
